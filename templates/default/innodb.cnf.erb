[mysqld]

default-storage-engine = innodb
innodb_buffer_pool_size = 300M
innodb_log_file_size = 10M # May need to purge (rm)
/var/lib/mysql/ib_logfile*
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 1M
innodb_additional_mem_pool_size = 20M
# num cpu's/cores x2 is a good base line for
innodb_thread_concurrency
innodb_thread_concurrency = 8
innodb_open_files = 1024
ignore-builtin-innodb
innodb_file_per_table
plugin-load=innodb=ha_innodb_plugin.so;innodb_trx=ha_innodb_plugin.so;innodb_locks=ha_innodb_plugin.so;innodb_lock_waits=ha_innodb_plugin.so;innodb_cmp=ha_innodb_plugin.so;innodb_cmp_reset=ha_innodb_plugin.so;   
